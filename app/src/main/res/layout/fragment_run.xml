<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:text="开始"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@+id/Info" />

    <Chronometer
        android:layout_width="0dp"
        android:layout_height="66dp"
        android:id="@+id/main_timer"
        android:gravity="center"
        android:textSize="50dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="000"
        android:layout_width="271dp"
        android:layout_height="75dp"
        android:id="@+id/Info"
        app:layout_constraintLeft_toLeftOf="@+id/main_timer"
        app:layout_constraintRight_toRightOf="@+id/main_timer"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/main_timer" />

    <TextView
        android:text="跑步"
        android:layout_width="62dp"
        android:layout_height="33dp"
        android:id="@+id/run"
        app:layout_constraintBottom_toTopOf="@+id/main_timer"
        android:layout_marginBottom="24dp"
        app:layout_constraintRight_toLeftOf="@+id/map"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp" />

    <TextView
        android:text="地图"
        android:layout_width="63dp"
        android:layout_height="34dp"
        android:id="@+id/map"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintHorizontal_bias="0.62" />

</android.support.constraint.ConstraintLayout>